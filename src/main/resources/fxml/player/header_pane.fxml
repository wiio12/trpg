<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--头像与名字部分-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.DropShadow?>

<VBox stylesheets="/css/player/small/player_statistics_small_style.css" prefWidth="250.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="indi.wiio.player.HeaderPane">
    <children>

    <!--头像-->
    <HBox alignment="CENTER">
        <children>
            <StackPane layoutX="136.0" layoutY="26.0" AnchorPane.leftAnchor="136.0" AnchorPane.rightAnchor="136.0">
                <children>
                    <ImageView fx:id="profilePhoto" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/image/profilePhoto.jpg" />
                        </image>
                        <StackPane.margin>
                            <Insets top="50.0" />
                        </StackPane.margin>
                    </ImageView>
                </children>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
                <effect>
                    <DropShadow />
                </effect>
            </StackPane>
        </children>
    </HBox>
  <VBox alignment="CENTER">
      <children>
          <HBox alignment="CENTER">
              <children>
                  <Label fx:id="nameLabel" text="Fyodor" textAlignment="CENTER">
                      <HBox.margin>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </HBox.margin>
                      <font>
                          <Font size="18.0" />
                      </font>
                      <BorderPane.margin>
                          <Insets />
                      </BorderPane.margin>
                  </Label>
                  <Region fx:id="gender" maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" prefHeight="15.0" prefWidth="15.0" styleClass="genderIconFemale"  />
              </children>
          </HBox>
      </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
  </VBox>

  <VBox fx:id="tagContainer">
      <children>
          <!--标签列表-->
          <FlowPane fx:id="tagPane" alignment="CENTER" prefWidth="210.0" prefWrapLength="200.0" BorderPane.alignment="CENTER">
              <children>

                  <Label styleClass="stateLabel" text="18">
                      <FlowPane.margin>
                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                      </FlowPane.margin>
                      <padding>
                          <Insets left="5.0" right="5.0" />
                      </padding>
                  </Label>

                  <Label styleClass="stateLabel, stateLabel_physical" text="健康">
                      <FlowPane.margin>
                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                      </FlowPane.margin>
                      <padding>
                          <Insets left="5.0" right="5.0" />
                      </padding>
                  </Label>

                  <Label styleClass="stateLabel, stateLabel_mental" text="神志清醒">
                      <FlowPane.margin>
                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                      </FlowPane.margin>

                  </Label>


              </children>
          </FlowPane>
      </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </VBox.margin>
  </VBox>
    </children>
</VBox>
